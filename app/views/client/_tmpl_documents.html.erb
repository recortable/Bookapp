<script id="document" type="text/html">
  <div class="page document">
    <div id="document_{{id}}" class="head">
      <h1>{{title}}</h1>
      <div class="description">{{description}}</div>
    </div>
    <div class="paragraphs"></div>
  </div>
  <div id="comments" class="comments">
    <div class="head">
      <h1>Comentarios a '{{title}}'</h1>
    </div>
    <div class="comments-list"></div>
    <div class="comment editor" style="display: none;">
      <form action="#">
        <textarea cols="5" rows="5"></textarea>
        <div class="actions">
          <input type="submit" value="Comentar" />
          <a class="cancel">Cancelar</a>
        </div>
      </form>
    </div>
    <div class="comment actions">
      <a class="new-comment">Añadir comentario</a>
    </div>
  </div>
</script>

<script id="slot" type="text/html">
  <div class="slot">
    <div class="editor" style="display: none;">
      <h2>{{ title }}</h2>
      <form action="#">
        <div class="inputs">
          <textarea class="body" cols="30" rows="6"></textarea>
        </div>
        <div class="input select optional">
          <label class="select optional" for="filter">Tipo de contenido</label>
          <select class="select optional filter" name="project[stage]">
            <option value="markdown">Texto mejorado</option>
            <option value="html">HTML</option>
          </select>
        </div>
        <div class="actions">
          <input type="submit" value="Guardar" />
          <a class="cancel">Cancelar</a>
        </div>
      </form>
    </div>
  </div>
</script>

<script id="paragraph" type="text/html">
    <div class="display">
      <div class="actions">
        <a class="action-edit iconic iconic-plus_alt_16x16">Editar</a>
      </div>
      <div id="paragraph-{{id}}" class="body">{{{filtered_body}}}</div>
    </div>
    <div class="paragraph-editor editor" style="display: none;">
      <h2>Editar párrafo</h2>
      <form>
        <div class="inputs">
          <textarea class="editor-body" cols="30" rows="6"></textarea>
        </div>
        <div class="actions">
          <input type="submit" value="Guardar" />
          <a class="cancel">Cancelar</a>
        </div>
      </form>
    </div>
</script>

<script id="comment" type="text/html">
  <div id="comment-{{html_id}}" class="comment item composed">
    <div class="info">
      <div class="user_name">{{ user_name }}</div>
      <div class="created_at">{{#fecha}}{{ created_at }}{{/fecha}}</div>
    </div>
    <div class="body">
      {{body}}
    </div>
  </div>
</script>